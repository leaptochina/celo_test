<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/replay_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="#ffefef">

        <EditText
                android:id="@+id/replay_detail"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="30dp"
                android:maxLines="200"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionSend"
                android:textSize="15sp"
                android:background="@drawable/replay_input_style"
                android:hint="@string/topic_replay_hint"
                android:inputType="textPersonName"
                android:text="" />

        <Button
                android:id="@+id/reply_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="20"
                android:background="@drawable/green_circle_btn"
                android:ems="10"
                android:textSize="15sp"
                android:gravity="center"
                android:inputType="textPersonName"
                android:visibility="gone"
                android:text="@string/topic_replay_send_btn" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_weight="20"
            android:background="@drawable/gray_circle_btn"
            android:ems="10"
            android:textSize="15sp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/topic_replay_cancel_btn" />
    </LinearLayout>
</FrameLayout>